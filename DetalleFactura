    private void btnGuardarDetalleActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
        if (cbProductoDetalle.getSelectedIndex() == 0
           
                || txtPrecio.getText().isEmpty()) {
            JOptionPane.showMessageDialog(null, "DEBE LLENAR TODOS LOS CAMPOS");
        } else {

            String id_producto = (String) cbProductoDetalle.getSelectedItem();

            String idp = (controladorDetalle.buscarIdProducto(id_producto));

//            int cantidad = Integer.parseInt(txtCantidad.getText());
            int cantidad = 1;
            int precio = Integer.parseInt(txtPrecio.getText());

            if (controladorDetalle.SolicitudGuardarDetalle(idp, cantidad, precio)) {
                JOptionPane.showMessageDialog(this, "Agregado con exito");
                listar();
                combo();

            } else {
                JOptionPane.showMessageDialog(this, "Error al registrar");

            }
        }

    }                                                 

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        subtotal();
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        Total();

    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        if (controladorDetalle.SolicitudEliminarTodo()) {
            JOptionPane.showMessageDialog(this, "se ha eliminado todos los registros");
            listar();

        } else {
            JOptionPane.showMessageDialog(this, "Error al eliminar todo");
        }
    }                                        

    private void btnEliminarDActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        int codigo = Integer.parseInt(txtCodigoDetalle.getText());
        if (controladorDetalle.SolicitudEliminar(codigo)) {
            JOptionPane.showMessageDialog(this, "factura eliminada exitosamente");
            listar();

        } else {
            JOptionPane.showMessageDialog(this, "Error al eliminar");
        }
        
         
    }                                            

    private void tablaDetalleMouseClicked(java.awt.event.MouseEvent evt) {                                          
        // TODO add your handling code here:
        int seleccion = tablaDetalle.rowAtPoint(evt.getPoint());
        

        txtCodigoDetalle.setText(String.valueOf(tablaDetalle.getValueAt(seleccion, 0)));
        cbProductoDetalle.setSelectedItem(String.valueOf(tablaDetalle.getValueAt(seleccion, 1)));
        txtPrecio.setText(String.valueOf(tablaDetalle.getValueAt(seleccion, 2)));
        
        
        btnEliminarD.setEnabled(true);
        
    }                                         

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
         Bienvenido obj = new Bienvenido();
        obj.setVisible(true);
        this.dispose();
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here
        if (
            txtSubTotal.getText().isEmpty()
                || txtTotal.getText().isEmpty()) {
            JOptionPane.showMessageDialog(null, "DEBE LLENAR TODOS LOS CAMPOS");
        } else {

            String id_producto = (String) cbProductoDetalle.getSelectedItem();

            String idp = (controladorDetalle.buscarIdProducto(id_producto));


          
           double subTotal=Double.parseDouble(txtSubTotal.getText());
           double total=Double.parseDouble(txtTotal.getText());

            if (controladorDetalleG.SolicitudGuardarDetalleG( subTotal, total)) {
                JOptionPane.showMessageDialog(this, "Detalle registrado con exito");
                listar();
                combo();

            } else {
                JOptionPane.showMessageDialog(this, "Error al registrar");

            }
        }
    }                                        

    private void txtTotalActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        
    public void combo() {
        cbProductoDetalle.setModel(controladorDetalle.solicitudListarP());

    }

    public void listar() {
        tablaDetalle.setModel(controladorDetalle.SolicitudListar());
    }

