    public void subtotal() {
        int fila = 0;
        int total = 0;
        for (int i = 0; i < tablaDetalle.getRowCount(); i++) {
            fila = (int) Double.parseDouble(tablaDetalle.getValueAt(i, 3).toString());
            total += fila;
        }
        txtSubTotal.setText("" + total);
    }

    public void Total() {
        int fila = 0;
        int total = 0;
        for (int i = 0; i < tablaDetalle.getRowCount(); i++) {
            fila = (int) Double.parseDouble(tablaDetalle.getValueAt(i, 3).toString());
            total += fila;
        }
        txtTotal.setText("" +total * 1.16);
    }

    

